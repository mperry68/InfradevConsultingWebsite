<section class="cta section">
	<div class="container">
		<div class="tech-strip">
			<img src="/assets/WebsiteMarketing/About Us/Business@2x.png" alt="Programming Language" />
			<img src="/assets/WebsiteMarketing/About Us/Consulting Expertise@2x.png" alt="Programming Language" />
			<img src="/assets/WebsiteMarketing/About Us/Proven Success@2x.png" alt="Programming Language" />
			<img src="/assets/WebsiteMarketing/About Us/Tailored Solutions@2x.png" alt="Programming Language" />
			<img src="/assets/WebsiteMarketing/About Us/Top Quality@2x.png" alt="Programming Language" />
		</div>
		<div class="cta-content">
			<h2>Ready to Transform Your Business?</h2>
			<p>Let's discuss how we can help you achieve your technology goals.</p>
			<a href="/contact" class="btn btn-primary btn-large">Get in Touch</a>
		</div>
	</div>
</section>

<style>
	.cta {
		background: linear-gradient(135deg, var(--color-orange) 0%, var(--color-orange-dark) 100%);
		color: #fff;
		text-align: center;
		padding-bottom: 0 !important;
	}

	.tech-strip {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2rem;
		padding: 1.5rem 0;
		margin-bottom: 2rem;
		flex-wrap: wrap;
		opacity: 0.9;
	}

	.tech-strip img {
		height: 40px;
		width: auto;
		object-fit: contain;
		filter: brightness(0) invert(1);
		opacity: 0.8;
		transition: opacity 0.3s ease;
	}

	.tech-strip img:hover {
		opacity: 1;
	}

	.cta-content {
		max-width: 700px;
		margin: 0 auto;
	}

	.cta h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.cta p {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.95;
	}

	.btn-large {
		padding: 1.25rem 2.5rem;
		font-size: 1.1rem;
		background: #fff;
		color: var(--color-orange);
	}

	.btn-large:hover {
		background: var(--color-bg-light);
		color: var(--color-orange-dark);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
	}

	@media (max-width: 768px) {
		.tech-strip {
			gap: 1.5rem;
			padding: 1rem 0;
		}

		.tech-strip img {
			height: 30px;
		}

		.cta h2 {
			font-size: 2rem;
		}

		.cta p {
			font-size: 1.1rem;
		}
	}
</style>

