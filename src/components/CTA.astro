<section class="cta section">
	<div class="container">
		<div class="cta-content">
			<h2>Ready to Transform Your Business?</h2>
			<p>Let's discuss how we can help you achieve your technology goals.</p>
			<a href="/contact" class="btn btn-primary btn-large">Get in Touch</a>
		</div>
	</div>
</section>

<style>
	.cta {
		background: linear-gradient(135deg, var(--color-orange) 0%, var(--color-orange-dark) 100%);
		color: #fff;
		text-align: center;
	}

	.cta-content {
		max-width: 700px;
		margin: 0 auto;
	}

	.cta h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.cta p {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.95;
	}

	.btn-large {
		padding: 1.25rem 2.5rem;
		font-size: 1.1rem;
		background: #fff;
		color: var(--color-orange);
	}

	.btn-large:hover {
		background: var(--color-bg-light);
		color: var(--color-orange-dark);
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
	}

	@media (max-width: 768px) {
		.cta h2 {
			font-size: 2rem;
		}

		.cta p {
			font-size: 1.1rem;
		}

		.btn-large {
			width: 100%;
			max-width: 100%;
		}
	}

	@media (max-width: 480px) {
		.cta h2 {
			font-size: 1.75rem;
		}

		.cta p {
			font-size: 1rem;
		}
	}
</style>

