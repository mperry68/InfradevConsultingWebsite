import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import GeoPricing from '../components/GeoPricing.astro';

const brochureUrl = '/assets/WebsiteMarketing/Brochure One Page/InfraDevCorpBrochure-Consult-Draft.jpg';
