---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="SEO Brochure - InfraDev Consulting">
	<Header />
	<main>
		<section class="brochure-section section">
			<div class="container">
				<div class="brochure-image">
					<img 
						src="/InfraDevCorpBrochure-Consult-Draft.jpg" 
						alt="InfraDev Consulting SEO Brochure" 
						class="brochure-img"
					/>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.brochure-section {
		background: var(--color-bg);
		min-height: calc(100vh - 200px);
	}

	.brochure-image {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
	}

	.brochure-img {
		max-width: 100%;
		height: auto;
	}
</style>

