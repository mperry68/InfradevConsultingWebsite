---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTA from '../../components/CTA.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
	const caseStudies = await getCollection('case-study');
	return caseStudies.map((caseStudy) => ({
		params: { slug: caseStudy.slug },
		props: { caseStudy },
	}));
}

const { caseStudy } = Astro.props;
const { Content } = await caseStudy.render();

const siteUrl = Astro.site?.href || Astro.url.origin;
const pageUrl = `${siteUrl}/case-study/${caseStudy.slug}`;
const seoTitle = caseStudy.data.seoTitle || caseStudy.data.title;
const seoDescription = caseStudy.data.seoDescription || caseStudy.data.description;
---

<Layout 
	title={`${seoTitle} | InfraDev Consulting Case Study`}
	description={seoDescription}
	canonical={pageUrl}
	image={caseStudy.data.image}
>
	<Header />
	<main>
		<article class="case-study-post section">
			<div class="container">
				<nav aria-label="Breadcrumb" class="breadcrumb">
					<ol>
						<li><a href="/">Home</a></li>
						<li><a href="/case-study">Case Studies</a></li>
						<li>{caseStudy.data.title}</li>
					</ol>
				</nav>
				<div class="case-study-post-header">
					<div class="case-study-post-meta">
						{caseStudy.data.category && (
							<span class="case-study-category">{caseStudy.data.category}</span>
						)}
						<time datetime={caseStudy.data.pubDate.toISOString()}>
							{caseStudy.data.pubDate.toLocaleDateString('en-US', { 
								year: 'numeric', 
								month: 'long', 
								day: 'numeric' 
							})}
						</time>
						{caseStudy.data.updatedDate && (
							<span class="updated-date">
								Updated: {caseStudy.data.updatedDate.toLocaleDateString('en-US', { 
									year: 'numeric', 
									month: 'long', 
									day: 'numeric' 
								})}
							</span>
						)}
					</div>
					<h1 class="case-study-post-title">{caseStudy.data.title}</h1>
					{caseStudy.data.client && (
						<p class="case-study-client">Client: {caseStudy.data.client}</p>
					)}
					<p class="case-study-post-description">{caseStudy.data.description}</p>
					{caseStudy.data.tags.length > 0 && (
						<div class="case-study-post-tags">
							{caseStudy.data.tags.map((tag) => (
								<span class="tag">{tag}</span>
							))}
						</div>
					)}
					{caseStudy.data.results && caseStudy.data.results.length > 0 && (
						<div class="case-study-results">
							<h3>Key Results</h3>
							<div class="results-grid">
								{caseStudy.data.results.map((result) => (
									<div class="result-item">
										<div class="result-value">{result.value}</div>
										<div class="result-metric">{result.metric}</div>
									</div>
								))}
							</div>
						</div>
					)}
				</div>

				<div class="case-study-post-content">
					<Content />
				</div>

				<div class="case-study-post-cta">
					<CTA />
				</div>
			</div>
		</article>
	</main>
	<Footer />
</Layout>

<script type="application/ld+json" set:html={JSON.stringify({
	"@context": "https://schema.org",
	"@type": "Article",
	"headline": caseStudy.data.title,
	"description": seoDescription,
	"image": caseStudy.data.image ? `${siteUrl}${caseStudy.data.image}` : `${siteUrl}/assets/WebsiteMarketing/Logo.png`,
	"datePublished": caseStudy.data.pubDate.toISOString(),
	"dateModified": (caseStudy.data.updatedDate || caseStudy.data.pubDate).toISOString(),
	"author": {
		"@type": "Organization",
		"name": caseStudy.data.author,
		"url": siteUrl
	},
	"publisher": {
		"@type": "Organization",
		"name": "InfraDev Consulting",
		"url": siteUrl,
		"logo": {
			"@type": "ImageObject",
			"url": `${siteUrl}/assets/WebsiteMarketing/Logo.png`
		}
	},
	"mainEntityOfPage": {
		"@type": "WebPage",
		"@id": pageUrl
	},
	"keywords": caseStudy.data.tags.join(", ")
})} />

<style>
	.case-study-post {
		background: var(--color-bg);
	}

	.breadcrumb {
		margin-bottom: 2rem;
		text-align: left;
	}

	.breadcrumb ol {
		display: flex;
		list-style: none;
		gap: 0.5rem;
		align-items: center;
		font-size: 0.9rem;
		justify-content: flex-start;
	}

	.breadcrumb li:not(:last-child)::after {
		content: 'â€º';
		margin-left: 0.5rem;
		color: var(--color-text-light);
	}

	.breadcrumb a {
		color: var(--color-text-light);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.breadcrumb a:hover {
		color: var(--color-orange);
	}

	.breadcrumb li:last-child {
		color: var(--color-text);
		font-weight: 500;
	}

	.case-study-post-header {
		max-width: 800px;
		margin: 0 auto 3rem;
		text-align: center;
	}

	.case-study-post-meta {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
		margin-bottom: 1.5rem;
		font-size: 0.9rem;
		color: var(--color-text-light);
	}

	.case-study-category {
		background: var(--color-orange);
		color: #fff;
		padding: 0.25rem 0.75rem;
		border-radius: 15px;
		font-size: 0.85rem;
		font-weight: 500;
	}

	.updated-date {
		color: var(--color-text-light);
	}

	.case-study-post-title {
		font-size: 2.5rem;
		color: var(--color-text);
		margin-bottom: 0.5rem;
		font-weight: 700;
		line-height: 1.2;
	}

	.case-study-client {
		font-size: 1rem;
		color: var(--color-text-light);
		font-style: italic;
		margin-bottom: 1rem;
	}

	.case-study-post-description {
		font-size: 1.2rem;
		color: var(--color-text-light);
		line-height: 1.7;
		margin-bottom: 1rem;
	}

	.case-study-post-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
		justify-content: center;
		margin-bottom: 2rem;
	}

	.tag {
		background: var(--color-bg-light);
		padding: 0.25rem 0.75rem;
		border-radius: 15px;
		font-size: 0.85rem;
		color: var(--color-text);
	}

	.case-study-results {
		background: linear-gradient(135deg, rgba(255, 132, 39, 0.08), rgba(255, 150, 72, 0.12));
		border-left: 4px solid var(--color-orange);
		padding: 2rem;
		border-radius: 8px;
		margin: 2rem 0;
	}

	.case-study-results h3 {
		font-size: 1.5rem;
		color: var(--color-text);
		margin-bottom: 1.5rem;
		font-weight: 600;
		text-align: center;
	}

	.results-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.result-item {
		text-align: center;
	}

	.result-value {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-orange);
		margin-bottom: 0.5rem;
	}

	.result-metric {
		font-size: 1rem;
		color: var(--color-text-light);
	}

	.case-study-post-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.case-study-post-content :global(h2) {
		font-size: 2rem;
		color: var(--color-text);
		margin-top: 3rem;
		margin-bottom: 1rem;
		font-weight: 600;
		line-height: 1.3;
	}

	.case-study-post-content :global(h3) {
		font-size: 1.5rem;
		color: var(--color-text);
		margin-top: 2rem;
		margin-bottom: 0.75rem;
		font-weight: 600;
		line-height: 1.3;
	}

	.case-study-post-content :global(p) {
		font-size: 1.1rem;
		color: var(--color-text);
		line-height: 1.8;
		margin-bottom: 1.5rem;
	}

	.case-study-post-content :global(ul),
	.case-study-post-content :global(ol) {
		margin-bottom: 1.5rem;
		padding-left: 2rem;
	}

	.case-study-post-content :global(li) {
		font-size: 1.1rem;
		color: var(--color-text);
		line-height: 1.8;
		margin-bottom: 0.5rem;
	}

	.case-study-post-content :global(a) {
		color: var(--color-orange);
		text-decoration: underline;
	}

	.case-study-post-content :global(a:hover) {
		color: var(--color-orange-dark);
	}

	.case-study-post-content :global(strong) {
		font-weight: 600;
		color: var(--color-text);
	}

	.case-study-post-content :global(blockquote) {
		border-left: 4px solid var(--color-orange);
		padding-left: 1.5rem;
		margin: 2rem 0;
		font-style: italic;
		color: var(--color-text-light);
	}

	.case-study-post-cta {
		max-width: 800px;
		margin: 4rem auto 0;
	}

	@media (max-width: 768px) {
		.case-study-post-title {
			font-size: 2rem;
		}

		.case-study-post-description {
			font-size: 1.1rem;
		}

		.case-study-post-content :global(h2) {
			font-size: 1.75rem;
		}

		.case-study-post-content :global(h3) {
			font-size: 1.3rem;
		}

		.case-study-post-content :global(p) {
			font-size: 1rem;
		}

		.results-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

