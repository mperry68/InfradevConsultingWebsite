	}

	.comparison-table td {
		padding: 1.25rem 1.5rem;
		border-bottom: 1px solid #e0e0e0;
		color: var(--color-text-light);
	}

	.comparison-table tbody tr:last-child td {
		border-bottom: none;
	}

