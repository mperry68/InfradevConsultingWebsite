---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CTA from '../../components/CTA.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
	const blogPosts = await getCollection('blog');
	return blogPosts.map((post) => ({
		params: { slug: post.slug },
		props: { post },
	}));
}

const { post } = Astro.props;
const { Content } = await post.render();

const siteUrl = Astro.site?.href || Astro.url.origin;
const pageUrl = `${siteUrl}/blog/${post.slug}`;
const seoTitle = post.data.seoTitle || post.data.title;
const seoDescription = post.data.seoDescription || post.data.description;
---

<Layout 
	title={`${seoTitle} | InfraDev Blog`}
	description={seoDescription}
	canonical={pageUrl}
	image={post.data.image}
>
	<Header />
	<main>
		<article class="blog-post section">
			<div class="container">
				<nav aria-label="Breadcrumb" class="breadcrumb">
					<ol>
						<li><a href="/">Home</a></li>
						<li><a href="/blog">Blog</a></li>
						<li>{post.data.title}</li>
					</ol>
				</nav>
				<div class="blog-post-header">
					<div class="blog-post-meta">
						<time datetime={post.data.pubDate.toISOString()}>
							{post.data.pubDate.toLocaleDateString('en-US', { 
								year: 'numeric', 
								month: 'long', 
								day: 'numeric' 
							})}
						</time>
						{post.data.updatedDate && (
							<span class="updated-date">
								Updated: {post.data.updatedDate.toLocaleDateString('en-US', { 
									year: 'numeric', 
									month: 'long', 
									day: 'numeric' 
								})}
							</span>
						)}
						{post.data.tags.length > 0 && (
							<div class="blog-post-tags">
								{post.data.tags.map((tag) => (
									<span class="tag">{tag}</span>
								))}
							</div>
						)}
					</div>
					<h1 class="blog-post-title">{post.data.title}</h1>
					<p class="blog-post-description">{post.data.description}</p>
				</div>

				<div class="blog-post-content">
					<Content />
				</div>

				<div class="blog-post-cta">
					<CTA />
				</div>
			</div>
		</article>
	</main>
	<Footer />
</Layout>

<script type="application/ld+json" set:html={JSON.stringify({
	"@context": "https://schema.org",
	"@type": "Article",
	"headline": post.data.title,
	"description": seoDescription,
	"image": post.data.image ? `${siteUrl}${post.data.image}` : `${siteUrl}/assets/WebsiteMarketing/Logo20/InfraLogo20-full.png`,
	"datePublished": post.data.pubDate.toISOString(),
	"dateModified": (post.data.updatedDate || post.data.pubDate).toISOString(),
	"author": {
		"@type": "Organization",
		"name": post.data.author,
		"url": siteUrl
	},
	"publisher": {
		"@type": "Organization",
		"name": "InfraDev",
		"url": siteUrl,
		"logo": {
			"@type": "ImageObject",
			"url": `${siteUrl}/assets/WebsiteMarketing/Logo20/InfraLogo20-full.png`
		}
	},
	"mainEntityOfPage": {
		"@type": "WebPage",
		"@id": pageUrl
	},
	"keywords": post.data.tags.join(", ")
})} />

<style>
	.blog-post {
		background: var(--color-bg);
	}

	.breadcrumb {
		margin-bottom: 2rem;
		text-align: left;
	}

	.breadcrumb ol {
		display: flex;
		list-style: none;
		gap: 0.5rem;
		align-items: center;
		font-size: 0.9rem;
		justify-content: flex-start;
	}

	.breadcrumb li:not(:last-child)::after {
		content: 'â€º';
		margin-left: 0.5rem;
		color: var(--color-text-light);
	}

	.breadcrumb a {
		color: var(--color-text-light);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.breadcrumb a:hover {
		color: var(--color-orange);
	}

	.breadcrumb li:last-child {
		color: var(--color-text);
		font-weight: 500;
	}

	.blog-post-header {
		max-width: 800px;
		margin: 0 auto 3rem;
		text-align: center;
	}

	.blog-post-meta {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		flex-wrap: wrap;
		margin-bottom: 1.5rem;
		font-size: 0.9rem;
		color: var(--color-text-light);
	}

	.updated-date {
		color: var(--color-text-light);
	}

	.blog-post-tags {
		display: flex;
		gap: 0.5rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	.tag {
		background: var(--color-bg-light);
		padding: 0.25rem 0.75rem;
		border-radius: 15px;
		font-size: 0.85rem;
		color: var(--color-text);
	}

	.blog-post-title {
		font-size: 2.5rem;
		color: var(--color-text);
		margin-bottom: 1rem;
		font-weight: 700;
		line-height: 1.2;
	}

	.blog-post-description {
		font-size: 1.2rem;
		color: var(--color-text-light);
		line-height: 1.7;
	}

	.blog-post-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.blog-post-content :global(h2) {
		font-size: 2rem;
		color: var(--color-text);
		margin-top: 3rem;
		margin-bottom: 1rem;
		font-weight: 600;
		line-height: 1.3;
	}

	.blog-post-content :global(h3) {
		font-size: 1.5rem;
		color: var(--color-text);
		margin-top: 2rem;
		margin-bottom: 0.75rem;
		font-weight: 600;
		line-height: 1.3;
	}

	.blog-post-content :global(p) {
		font-size: 1.1rem;
		color: var(--color-text);
		line-height: 1.8;
		margin-bottom: 1.5rem;
	}

	.blog-post-content :global(ul),
	.blog-post-content :global(ol) {
		margin-bottom: 1.5rem;
		padding-left: 2rem;
	}

	.blog-post-content :global(li) {
		font-size: 1.1rem;
		color: var(--color-text);
		line-height: 1.8;
		margin-bottom: 0.5rem;
	}

	.blog-post-content :global(a) {
		color: var(--color-orange);
		text-decoration: underline;
	}

	.blog-post-content :global(a:hover) {
		color: var(--color-orange-dark);
	}

	.blog-post-content :global(strong) {
		font-weight: 600;
		color: var(--color-text);
	}

	.blog-post-content :global(blockquote) {
		border-left: 4px solid var(--color-orange);
		padding-left: 1.5rem;
		margin: 2rem 0;
		font-style: italic;
		color: var(--color-text-light);
	}

	.blog-post-cta {
		max-width: 800px;
		margin: 4rem auto 0;
	}

	@media (max-width: 768px) {
		.blog-post-title {
			font-size: 2rem;
		}

		.blog-post-description {
			font-size: 1.1rem;
		}

		.blog-post-content :global(h2) {
			font-size: 1.75rem;
		}

		.blog-post-content :global(h3) {
			font-size: 1.3rem;
		}

		.blog-post-content :global(p) {
			font-size: 1rem;
		}
	}
</style>

