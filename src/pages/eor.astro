---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
	title="Employer of Record (EOR) - Hire Canadian Talent | InfraDev Consulting" 
	description="Hire Canadian talent without opening a Canadian entity. InfraDev Consulting acts as your Employer of Record (EOR), managing payroll, taxes, benefits, and compliance."
>
	<Header />
	<main>
		<!-- Hero Section -->
		<section class="eor-hero section">
			<div class="container">
				<div class="hero-content">
					<h1>Hire Canadian Talent Without Opening a Canadian Entity</h1>
