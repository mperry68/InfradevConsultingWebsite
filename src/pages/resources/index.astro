---

<Layout 
	title="Resource Hub - Guides, Checklists & Tools for Hiring in Canada | InfraDev Consulting" 
	description="Download free resources including hiring guides, compliance checklists, employment forms, process diagrams, and calculators for U.S. companies hiring Canadian talent."
	canonical={pageUrl}
>
	<Header />
	<main>
		<section class="resources-hero section">
			<div class="container">
				<div class="resources-hero-content">
					<h1>Resource Hub</h1>
					<p class="resources-hero-subtitle">Expert resources, guides, and tools to help U.S. companies successfully hire and manage Canadian talent. Download free guides, checklists, templates, and more.</p>
				</div>
			</div>
		</section>

		<section class="resources-list section">
			<div class="container">
				{resources.map((category) => (
					<div class="resource-category">
						<h2 class="category-title">{category.category}</h2>
						<div class="resources-grid">
							{category.items.map((resource) => (
								<div class="resource-card">
									<div class="resource-icon">{resource.icon}</div>
									<div class="resource-content">
										<div class="resource-type">{resource.type}</div>
										<h3 class="resource-title">{resource.title}</h3>
										<p class="resource-description">{resource.description}</p>
										{resource.download === "#" ? (
											<span class="resource-download">Coming Soon</span>
										) : (
											<a href={resource.download} class="resource-download" target="_blank" rel="noopener noreferrer">
												Download ‚Üí
											</a>
										)}
									</div>
								</div>
							))}
						</div>
					</div>
				))}
			</div>
		</section>

		<section class="resources-cta section">
			<div class="container">
				<div class="cta-content">
					<h2>Need Help with Your Canadian Hiring Strategy?</h2>
					<p>Our team of experts can help you navigate Canadian employment law, set up compliant payroll, and ensure full compliance with all regulations.</p>
					<div class="cta-buttons">
						<a href="/contact" class="btn btn-primary">Schedule a Consultation</a>
						<a href="/eor" class="btn btn-secondary">Learn About EOR Services</a>
					</div>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<script type="application/ld+json" set:html={JSON.stringify({
	"@context": "https://schema.org",
	"@type": "ItemList",
	"name": "Resources - InfraDev Consulting",
	"description": "Free resources, guides, and downloadable materials for hiring Canadian talent, EOR services, and search optimization",
	"url": pageUrl,
	"numberOfItems": resources.reduce((total, category) => total + category.items.length, 0),
	"itemListElement": resources.flatMap((category, categoryIndex) => 
		category.items.map((resource, itemIndex) => ({
			"@type": "ListItem",
			"position": resources.slice(0, categoryIndex).reduce((sum, cat) => sum + cat.items.length, 0) + itemIndex + 1,
			"item": {
				"@type": resource.download !== "#" && resource.download.startsWith("/") ? "DigitalDocument" : "Thing",
				"name": resource.title,
				"description": resource.description,
				"url": resource.download !== "#" ? `${siteUrl}${resource.download}` : pageUrl
			}
		}))
	)
})} />

<style>
